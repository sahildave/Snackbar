<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/snackContainer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    style="?attr/snackBarContainerStyle"
    android:padding="18dp">

    <TextView
        android:id="@id/snackMessage"
        style="?attr/snackBarTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_toLeftOf="@id/snackButton"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="6dp"
        android:textSize="14sp" />

    <TextView
        android:id="@id/snackButton"
        style="?attr/snackBarButtonStyle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="6dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/sb__default_button_text_color"
        android:editable="false"
        android:textSize="14sp"
        android:capitalize="characters"
        android:layout_centerVertical="true" />

</RelativeLayout>