<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@id/snackCard"
        android:tag="Footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#353535"
        android:paddingLeft="24dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp">

    <TextView
            android:id="@id/snackMessage"
            android:text="@string/forgot_cid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/snackIcon"
            android:textColor="@android:color/white"
            android:layout_marginRight="8dp"
            android:maxLines="2"
            android:textSize="16sp" />

    <RelativeLayout
            android:id="@+id/snackButtonPanel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/snackMessage"
            android:layout_alignLeft="@id/snackMessage">

        <Button
                android:id="@id/snackBackButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textSize="12sp"
                android:padding="8dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:text="BACK"/>

        <Button
                android:id="@id/snackMoreHelp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textSize="12sp"
                android:layout_toLeftOf="@id/snackBackButton"
                android:background="@android:color/transparent"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"
                android:text="MORE HELP"/>


    </RelativeLayout>

</RelativeLayout>